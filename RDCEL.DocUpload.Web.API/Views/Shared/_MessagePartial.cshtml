<link href="~/Content/css/message.css" rel="stylesheet" />
<script>
    function AlertType() { }

    AlertType.success = 'successM';
    AlertType.info = 'infoM';
    AlertType.warning = 'warningM';
    AlertType.error = 'errorM';


    function ShowAlert(msg, type, parentid) {
        var alertid = "dvAlert";
        if (parentid != undefined)
            alertid = parentid + " #dvAlert";
        $("#" + alertid).html(msg);
        //$("#" + alertid).html("<div class='validation-summary-errors'><ul></ul></div>")
        //for (var i = 0; i < msg.length; i++) {
        //    $("#" + alertid).find(".validation-summary-errors > ul:first").append("<li>" + msg[i] + "</li>");
        //}
        $("#" + alertid).attr('class', type);
        $("#" + alertid).fadeIn();
        $('html, body').animate({ scrollTop: 0 }, 800);
        //
        setTimeout(function () { $("#" + alertid).fadeOut(); }, 5000);
    }
</script>
<div id="dvAlert" class="clsdvAlert @messageType" style="display:@styleDisplayValue">
    @Html.ValidationSummary(false)
</div>