@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center align-items-center">
    <div class="col-md-6 mx-auto">
        <h3 class="section-title">Login</h3>

        <div class="row">
            <div class="col-md-12">
                <div class="card box">

                    <div id="divLogin">
                        <div id="div1">
                            @using (Html.BeginForm("Login", "Voucher", FormMethod.Post, new { id = "frmLogin", @class = "login-form form-horizontal", defaultbutton = "btnLogin" }))
                            {


                                <div>
                                    @Html.Partial("_MessagePartial")
                                </div>

                                <div class="form-group my-3">
                                    <label for="" class="mb-2">User Name</label>
                                    <input type="text" id="txtUserName" class="form-control" autocomplete="off" placeholder="User Name" name="username" required />
                                    <label id="lblName" style="display:none;color:red;"></label>
                                </div>

                                <div class="form-group">
                                    <label for="" class="mb-2">Password</label>
                                    <input id="txtPassword" autocomplete="off" class="form-control" type="password" placeholder="Password" name="password" required />
                                    <label id="lblPassword" style="display:none; color:red;"></label>
                                </div>


                                <div class="form-group text-end mt-2" id="divSubmit">
                                    <button id="btnLogin" class="btn btn-primary" type="submit">Login</button>
                                </div>
                            }
                        </div>
                    </div>


                </div>
            </div>
        </div>

    </div>
</div>


